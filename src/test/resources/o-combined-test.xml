<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/jdbc     
        http://www.springframework.org/schema/jdbc/spring-jdbc-4.1.xsd">

	<bean class="social.okay.repository.jdbc.RoleJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.UserJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.PostJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.FriendJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.MusicJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.NotificationJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.ActionJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.MessageJdbcDao"/>
	<bean class="social.okay.repository.jdbc.FlyerJdbcRepo"/>
	<bean class="social.okay.repository.jdbc.SheetJdbcRepo"/>

	<bean class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
		<constructor-arg ref="dataSource"/>
	</bean>

	<jdbc:embedded-database id="dataSource" type="H2">
		<jdbc:script location="classpath:create-db.sql" />
	</jdbc:embedded-database>

	<bean class="social.okay.common.Utils"/>

	<bean class="social.okay.service.UserService"/>
	<bean class="social.okay.service.ActionService"/>
	<bean class="social.okay.service.AuthService"/>
	<bean class="social.okay.service.EmailService"/>
	<bean class="social.okay.service.FlyerService"/>
	<bean class="social.okay.service.FriendService"/>
	<bean class="social.okay.service.MessageService"/>
	<bean class="social.okay.service.NotificationService"/>
	<bean class="social.okay.service.PhoneService"/>
	<bean class="social.okay.service.PortalService"/>
	<bean class="social.okay.service.PostService"/>
	<bean class="social.okay.service.ReCaptchaService"/>
	<bean class="social.okay.service.SearchService"/>
	<bean class="social.okay.service.SheetService"/>
	<bean class="social.okay.service.StaticService"/>
	<bean class="social.okay.service.StripeService"/>
	<bean class="social.okay.service.SyncService"/>

	<bean id="appStartup" class="social.okay.AppStartup" scope="singleton"/>

	<bean id="sessionManager" class="social.okay.common.SessionManager" scope="singleton"/>

	<bean id="amadeusAccessor" class="social.okay.accessor.OkayAccessor"/>

</beans>
